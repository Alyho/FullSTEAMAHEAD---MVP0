<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FullSteamAheadMVP0Project.Views.Team_Calendar"
             BackgroundImageSource="MyTeams_Calendar">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height=".2*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="3" Text="Chat" CornerRadius="3" HorizontalOptions="End" FontSize="13" Clicked="Chat_Button_CLicked"/>
        <Button Grid.Column="1" Grid.Row="3" Text="Announce-ments" CornerRadius="3" HorizontalOptions="End" FontSize="12" Clicked="Announcements_Button_CLicked"/>
        <Button Grid.Column="2" Grid.Row="3" Text="Members" HorizontalOptions="End" CornerRadius="3" FontSize="13" Clicked="Members_Button_CLicked"/>
        <Button Grid.Column="3" Grid.Row="3" Text="Back" HorizontalOptions="End" CornerRadius="3" FontSize="13" Clicked="Back_Button_Team"/>

    </Grid>
</ContentPage>