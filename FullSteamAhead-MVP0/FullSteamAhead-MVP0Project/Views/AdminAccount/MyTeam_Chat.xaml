<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FullSteamAheadMVP0Project.Views.MyTeam_Chat"
             BackgroundImageSource="MyTeams_Chat">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=".3*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="3" Grid.Row="0" Text="Calendar" HorizontalOptions="End" CornerRadius="3" FontSize="12" Clicked="Calendar2_Button_CLicked"/>
        <Button Grid.Column="3" Grid.Row="1" Text="Announcements" CornerRadius="3" HorizontalOptions="EndAndExpand" FontSize="7" Clicked="Announcements2_Button_CLicked"/>
        <Button Grid.Column="3" Grid.Row="2" Text="Members" CornerRadius="3" HorizontalOptions="EndAndExpand" FontSize="12" Clicked="Members2_Button_CLicked"/>

    </Grid>


</ContentPage>