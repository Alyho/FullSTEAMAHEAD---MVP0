<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="FullSteamAheadMVP0Project.Views.TeamAdminSignIn"
             BackgroundColor="AliceBlue">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Text="Team Admin" 
               HorizontalTextAlignment="Center" 
               VerticalTextAlignment="Center" 
               TextColor="LightSlateGray" 
               FontSize="32"  
               Grid.Column="0" 
               Grid.Row="0"
               FontAttributes="Italic"/>

        <Entry Margin="2"  
                Grid.Row="1"
                Grid.Column="0"
                Placeholder="Team Username       " 
                Text="{Binding TeamUsername}"
                TextColor="LightSlateGray" 
                FontSize="20" 
                BackgroundColor="White"  
                HorizontalOptions="Center"
                WidthRequest="230"/>

        <Entry Margin="2" 
                Grid.Row="2" 
                Grid.Column="0"
                Placeholder="Team Password       " 
                Text="{Binding TeamPassword}"
                TextColor="LightSlateGray" 
                FontSize="20" 
                BackgroundColor="White" 
                HorizontalOptions="Center"
                WidthRequest="230"
                IsPassword="True"/>

        <Entry Margin="2" 
                Grid.Row="3" 
                Grid.Column="0"
                Placeholder="Personal Username    " 
                Text="{Binding TeamPersonalUsername}"
                TextColor="LightSlateGray" 
                FontSize="20" 
                BackgroundColor="White" 
                HorizontalOptions="Center"
                WidthRequest="230"/>

        <Entry Margin="2" 
                Grid.Row="4" 
                Grid.Column="0"
                Placeholder="Team Admin Password" 
                Text="{Binding TeamAdminPassword}"
                TextColor="LightSlateGray" 
                FontSize="20" 
                BackgroundColor="White" 
                HorizontalOptions="Center"
                WidthRequest="230"
                IsPassword="True"/>

        <Button Margin="2" 
                Grid.Row="5" 
                Text="Sign In" CornerRadius="10" 
                TextColor="LightSlateGray" 
                FontSize="20" 
                BackgroundColor="AliceBlue" 
                HorizontalOptions="Center"
                Command="{Binding CheckUserCommand}"/>

    </Grid>
    
</ContentPage>